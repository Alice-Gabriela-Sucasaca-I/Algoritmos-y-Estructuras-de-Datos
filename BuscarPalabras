#include <iostream>
using namespace std;
struct c
{
    int i;
    int j;
};
void dibujarTablero(char** tablero)
{
    for (char** fila = tablero; fila < tablero + 10; fila++)
    {
        cout << "|";
        for (char* col = *fila; col < *fila + 10; col++)
        {
            cout << " " << *col << " ";
        }
        cout << "|" << endl;
    }
    cout << endl;
}

